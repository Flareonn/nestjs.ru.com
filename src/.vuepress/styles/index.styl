/**
 * Custom Styles here.
 *
 * ref：https://v1.vuepress.vuejs.org/config/#index-styl
 */

.home .hero img
  max-width 450px !important

.home .hero .description
  font-size 20px !important
  margin-top 15px !important

.home .hero h1
  margin-bottom 15px !important

.file-tree {
  background: #282c34;
  margin: 40px 0;
  padding: 16px 32px;
}

.file-tree .item {
  display: block;
  line-height: 32px;
  font-size: 15px;
  color: white;
}

.file-tree .children {
  padding-left: 30px;
  position: relative;
  overflow: hidden;
}


.file-tree .children .item {
  position: relative;
}

.file-tree .children .item:before {
  content: "";
  left: -18px;
  bottom: 16px;
  width: 16px;
  height: 9999px;
  position: absolute;
  border-width: 0 0 1px 1px;
  border-style: solid;
  border-color: #dbdbdb;
  border-radius: 0 0 0 3px;
}

tr td {
  padding: 20px 30px;
  vertical-align: top;
  line-height: 1.5;
}

blockquote {
  border-left-color: #3eaf7c;
  &:before {
    display inline-block;
    content: 'Подсказка ☝️';
    color: white;
    padding: 0.25rem 0.5rem;
    margin-bottom: 15px;
    background-color: #3eaf7c;
    border-radius: 6px;
  }
}

.filename {
  padding: 10px 1.5rem;
  background-color: var(--codeBgColor);
  margin-bottom: -14px;
  border-radius: 6px 6px 0 0 !important;
  font-size: 14px;
  border-bottom: 1px solid var(--borderColor);

  & + .extra-class {
    border-radius: 0 0 6px 6px !important;
  }
}